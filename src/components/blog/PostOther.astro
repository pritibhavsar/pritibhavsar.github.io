---
import Layout from '../../layouts/Layout.astro';
interface Props { entry: any; Content: any }
const { entry, Content } = Astro.props;
---

<Layout title={entry.data.title} description={entry.data.postDetails?.paraOne} image={entry.data.bigImg?.src}>
  <section class="pt-20 pb-10 dark:bg-dark">
    <div class="container">
      <div class="w-full px-4">
        <h1 class="mb-6 text-3xl font-bold text-dark dark:text-white">{entry.data.title}</h1>
        <article class="prose dark:prose-invert">
          <Content />
        </article>
      </div>
    </div>
  </section>
</Layout>